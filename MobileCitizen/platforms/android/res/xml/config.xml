<?xml version='1.0' encoding='utf-8'?>
<widget id="org.opensheffield.MobileCitizen" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <preference name="AndroidLaunchMode" value="singleTop" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <feature name="BackgroundServicePlugin">
        <param name="android-package" value="com.red_folder.phonegap.plugin.backgroundservice.BackgroundServicePlugin" />
    </feature>
    <name>MobileCitizen</name>
    <description>
        Better With Data Society Mobile Interaction Agent
    </description>
    <author email="ianibbo@gmail.com" href="http://apps.opensheffield.org">
        The Better With Data Society
    </author>
    <content src="myService.html" />
    <access origin="*" />
    <preference name="permissions" value="none" />
    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="http://api.phonegap.com/1.0/battery" />
    <feature name="http://api.phonegap.com/1.0/file" />
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/network" />
    <feature name="http://api.phonegap.com/1.0/notification" />
</widget>
