    <name>MobileCitizen</name>
    <description>
        Better With Data Society Mobile Interaction Agent
    </description>
    <author email="ianibbo@gmail.com" href="http://apps.opensheffield.org">
        The Better With Data Society
    </author>
    <!-- content src="index.html"-->
    <content src="myService.html"/>

    <access origin="*" />

    <preference name="permissions" value="none" />

